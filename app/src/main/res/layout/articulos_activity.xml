<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:src="@drawable/vochito"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/image_negocio_articulos_activity"
            android:layout_gravity="top"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/id_articulos_activity"
            android:layout_toRightOf="@id/image_negocio_articulos_activity"
            android:text="id neg"
            android:layout_alignTop="@id/image_negocio_articulos_activity"
            />
        <TextView
            android:id="@+id/nombre_negocio_articulos_activity"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/image_negocio_articulos_activity"
            android:text="nombre negocio"
            android:layout_below="@id/id_articulos_activity"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/direccion_articulos_activity"
            android:layout_toRightOf="@id/image_negocio_articulos_activity"
            android:text="direccion"
            android:layout_below="@id/nombre_negocio_articulos_activity"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/coordenadas_articulos_activity"
            android:layout_toRightOf="@id/image_negocio_articulos_activity"
            android:text="coordenadas"
            android:layout_below="@id/direccion_articulos_activity"
            />
    <Button
        android:text="Agregar nuevo articulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_item"
        android:layout_gravity="top"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_negocio_articulos_activity"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/articulos_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_item"/>


    </RelativeLayout>